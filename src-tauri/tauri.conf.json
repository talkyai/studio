{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TalkyAI Studio",
  "version": "0.1.0",
  "identifier": "com.ctapu.TalkyAIStudio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TalkyAI Studio",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [],
    "icon": [
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "license": "MIT",
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "minimumSystemVersion": "11.0",
      "dmg": {
        "windowSize": { "width": 660, "height": 400 },
        "appPosition": { "x": 180, "y": 220 },
        "applicationFolderPosition": { "x": 480, "y": 220 }
      }
    },
    "linux": {
      "desktopFilename": "talkyai-studio",
      "rpm": {
        "epoch": 0,
        "release": "1",
        "preInstallScript": "src-tauri/scripts/preinstall.sh",
        "postInstallScript": "src-tauri/scripts/postinstall.sh",
        "preRemoveScript": "src-tauri/scripts/preremove.sh",
        "postRemoveScript": "src-tauri/scripts/postremove.sh",
        "conflicts": [],
        "depends": ["webkit2gtk4.1", "gtk3", "librsvg2"],
        "obsoletes": [],
        "provides": ["talkyai-studio"],
        "desktopTemplate": "src-tauri/desktop-template.desktop"
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "files": {
          "/usr/share/README.md": "../README.md"
        },
        "desktopTemplate": "src-tauri/desktop-template.desktop"
      }
    }
  }
}
